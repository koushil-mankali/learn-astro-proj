---
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await Astro.glob("../posts/*.md");

// unique tags
const tags = [
  ...new Set(
    allPosts
      ?.map((post) => {
        return post.frontmatter.tags;
      })
      ?.flat()
  ),
];
---

<BaseLayout>
  <div class="tags">
    <h1>Tags:</h1>
    {
      tags?.map((tag) => {
        return (
          <a class="tag" href={`/tags/${tag}`}>
            {tag}
          </a>
        );
      })
    }
  </div>

</BaseLayout>

<style>
  .tags {
    width: 100%;
    height: auto;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    background-color: yellow;
  }

  .tag {
    width: max-content;
    min-width: 200px;
    height: max-content;
    padding: 0.5rem;
    margin: 0.5rem;
    text-decoration: none;
    font-size: 1.1rem;
    text-transform: capitalize;
    color: palevioletred;
    background-color: honeydew;
    border: 1px solid crimson;
  }

  .tag:hover {
    color: white;
    background-color: cadetblue;
  }


</style>
