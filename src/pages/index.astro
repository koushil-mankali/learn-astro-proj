---
import BaseLayout from "../layouts/BaseLayout.astro";
import Greetings from "../components/Greetings.jsx";

const pageTitle = "Astro Learning Project";
---

<html lang="en">
  <head>
    <style>
      .box {
        width: 40%;
        height: max-content;
        margin: 2rem auto;
        padding: 1rem;
        border: 1px solid crimson;
        border-radius: 10px;
        box-shadow: 1px 1px 1px #eee;
        background-color: aquamarine;
        color: orange;
        display: flex;
        flex-direction: column;
        gap: 1rem;
      }

      .content {
        width: 100%;
        padding: 1rem;
        background-color: white;
      }

      button {
        padding: 0.5rem;
        border: 1px solid grey;
        background-color: wheat;
        cursor: pointer;
      }

      .box2 {
        width: 100%;
        height: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: red;
      }
    </style>
  </head>
  <body>
    <BaseLayout pageTitle={pageTitle}>
      <div class="box">
        <div class="content" id="content"></div>
        <button type="button" id="inptButton">Input</button>
      </div>
      <div class="box2">
        <Greetings messages={["Namaste", "Hi", "Hello"]} client:load />
      </div>
    </BaseLayout>
    <script>
      import "../scripts/promotScript.js";
    </script>
  </body>
</html>
